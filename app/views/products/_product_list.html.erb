<div class="row">
  <%if params[:category].present?%>
    <%@products = Product.where("category = ?", params[:category])%>
  <%else%>
    <%@products = @products%>
  <%end%>
  <% @products.each do |product|%>
  <div class="col-6 col-sm-3 productmini">
    <%=image_tag(product.image_url, width: "100%", height: "200px")%>
    <h3><%=link_to product.name, product%></h3>
    <hr>
    <p>Product Code: <%=product.part_number%></p>
    <h5 style="text-align: right">Â£<%=number_with_precision(product.price.to_f / 100, precision: 2)%></h5>
    <%if user_signed_in? && current_user.admin%>
      <div class="admintools">
        <p style="text-align: center;">
          <%= link_to('Edit', edit_product_path(product), :class => 'btn buttonborder') %>
          <%= link_to('Delete', product, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn buttonborder') %>
        </p>
      </div>
    <%end%>
  </div>
  <%end%>
</div>
